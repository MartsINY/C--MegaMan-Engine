<Entities>
	<Entity name="Peterchy">
		<GravityFlip>True</GravityFlip>
		<Tilesheet pallete="Default">images\enemies\Mega Man 3\Peterchy.png</Tilesheet>
		<Sprite width="32" height="32" reversed="true">
			<Hotspot x="16" y="16" />
			<Frame x="0" y="0" duration="4" />
			<Frame x="33" y="0" duration="4" />
			<Frame x="65" y="0" duration="4" />
			<Frame x="97" y="0" duration="4" />
			<Frame x="129" y="0" duration="4" />
		</Sprite>
		<Collision>
			<Hitbox name="Environment" x="-7" y="0" width="14" height="16" environment="true"></Hitbox>
			<Hitbox name="Horizontal" x="-10" y="-12" width="20" height="24" damage="4" environment="false">
				<Hits>Player</Hits><Group>Enemy</Group>
			</Hitbox>
		</Collision>
		<State name="Start">
			<Collision>
				<EnableBox name="Environment" />
				<EnableBox name="Horizontal" />
			</Collision>
			<Movement>
				<FlipSprite>True</FlipSprite>
				<X direction="Player" magnitude="0.5"/>
			</Movement>
			<Trigger><Condition>True</Condition>
				<Effect>
					<State>Toward_Player</State>
				</Effect>
			</Trigger>			
		</State>
		<State name="Toward_Player">
			<Trigger><Condition>Collision.BlockRight Or Collision.BlockLeft</Condition><Effect><Movement><X direction="Reverse" /></Movement></Effect></Trigger>
		</State>
		<Health><Max>3</Max><Flash>8</Flash></Health>
		<Trigger>
			<Condition>Health.Hit == True</Condition>
			<Effect>
				<Sound name="EnemyHurt" />
			</Effect>
		</Trigger>
		<Death>
			<Call>EnemyDeath</Call>
		</Death>
	</Entity>
</Entities>