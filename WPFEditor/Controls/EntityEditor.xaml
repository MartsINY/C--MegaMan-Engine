<UserControl x:Class="MegaMan.Editor.Controls.EntityEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MegaMan.Editor.Controls"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600">
    <UserControl.Resources>
        <Style TargetType="{x:Type Control}" x:Key="baseStyle">
            <Setter Property="FontSize" Value="16" />
        </Style>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin" Value="15,0" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource baseStyle}"></Style>
        <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource baseStyle}"></Style>
        <Style TargetType="{x:Type Label}" BasedOn="{StaticResource baseStyle}">
            <Setter Property="FontSize" Value="20"></Setter>
        </Style>
        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource baseStyle}"></Style>
    </UserControl.Resources>
    <DockPanel Margin="5" VerticalAlignment="Stretch">
        <ComboBox DockPanel.Dock="Top" ItemsSource="{Binding EntityList}" DisplayMemberPath="Name" SelectedValue="{Binding CurrentEntity, Mode=TwoWay}" VerticalAlignment="Top" HorizontalContentAlignment="Stretch" HorizontalAlignment="Left"></ComboBox>
        <DockPanel DockPanel.Dock="Top">
            <StackPanel Orientation="Vertical" DockPanel.Dock="Left" HorizontalAlignment="Left">
                <Label>Entity Information</Label>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock>Name</TextBlock>
                    <TextBox Text="{Binding CurrentEntity.Name}" MinWidth="120"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock>Max Alive</TextBlock>
                    <xctk:IntegerUpDown Value="{Binding CurrentEntity.MaxAlive}" Minimum="1"></xctk:IntegerUpDown>
                </StackPanel>
                <Label>Editor Preferences</Label>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock>Default Sprite</TextBlock>
                    <ComboBox ItemsSource="{Binding CurrentEntity.Sprites.Values}" DisplayMemberPath="Name" SelectedValue="{Binding DefaultSpriteName, Mode=TwoWay}" SelectedValuePath="Name"></ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock>Show in Entity Placement Panel</TextBlock>
                    <CheckBox IsChecked="{Binding ShowPlacement}"></CheckBox>
                </StackPanel>
            </StackPanel>
            <local:SpriteImage DataContext="{Binding DefaultSprite}" HorizontalAlignment="Stretch" Background="Magenta"></local:SpriteImage>
        </DockPanel>
        <DockPanel Background="WhiteSmoke" VerticalAlignment="Stretch" Height="Auto" Margin="0,5,0,0">
            <Label DockPanel.Dock="Top">Components</Label>
            <TabControl VerticalAlignment="Stretch" DockPanel.Dock="Bottom">
                <TabItem Header="Sprites"></TabItem>
                <TabItem Header="Movement"></TabItem>
            </TabControl>
        </DockPanel>
    </DockPanel>
</UserControl>
