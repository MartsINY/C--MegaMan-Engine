<UserControl x:Class="MegaMan.Editor.Controls.EntityPlacementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MegaMan.Editor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="64" d:DesignWidth="64">
    <DockPanel>
        <Border BorderBrush="{Binding BorderColor}" BorderThickness="2" CornerRadius="2" Margin="-4">
            <local:SpriteImage DataContext="{Binding Path=DefaultSprite}" Width="{Binding Path=DefaultSprite.Width}" Height="{Binding Path=DefaultSprite.Height}"></local:SpriteImage>
        </Border>
    </DockPanel>
</UserControl>
